extends layout

block content

    #messages

    .page-header
        h1  Admin Console

    .row
        .col-sm-3
            .panel.panel-default
                .panel-heading
                    h3.panel-title Queue
                .panel-body.control-element
                    include queue

        .col-sm-3
            .panel.panel-default
                .panel-heading
                    h3.panel-title Games
                .panel-body.control-element
                    include listrooms

        .col-sm-6.col-md-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title Messages
                .panel-body.control-element.control-element
                    include chatform

        .col-sm-2
            .panel.panel-default
                .panel-heading
                    h3.panel-title Client-Events
                .panel-body.center.control-element
                    include client-events

    .row
        .col-sm-10
            .panel.panel-default
                .panel-heading
                    h3.panel-title Preview
                .panel-body.control-element
                    include preview

        .col-sm-2
            .panel.panel-default
                .panel-heading
                    h3.panel-title Server-Events
                .panel-body.center.control-element
                    include server-events

    include global-js-includes
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/code.js')